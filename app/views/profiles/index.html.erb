<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Email</th>
      <th>Contact number1</th>
      <th>Contact number2</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Profile image path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user %></td>
        <td><%= profile.name %></td>
        <td><%= profile.email %></td>
        <td><%= profile.contact_number1 %></td>
        <td><%= profile.contact_number2 %></td>
        <td><%= profile.address1 %></td>
        <td><%= profile.address2 %></td>
        <td><%= profile.profile_image_path %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

